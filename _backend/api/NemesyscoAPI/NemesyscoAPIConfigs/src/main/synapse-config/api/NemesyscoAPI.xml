<?xml version="1.0" encoding="UTF-8"?>
<api context="/nemesysco/connect" name="NemesyscoAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" url-mapping="/audio/rate">
        <inSequence>
            <property expression="get-property('registry','conf:tools/nemesysconfig.xml')" name="apiconf" scope="default" type="OM" xmlns:ns="http://org.apache.synapse/xsd" xmlns:ns2="http://org.apache.synapse/xsd"/>
            <property expression="$ctx:apiconf//dataservices_url" name="dataservices_url" scope="default" type="STRING" xmlns:ns="http://org.apache.synapse/xsd" xmlns:ns2="http://org.apache.synapse/xsd"/>
            <property expression="$ctx:apiconf//docker_url" name="docker_url" scope="default" type="STRING" xmlns:ns="http://org.apache.synapse/xsd" xmlns:ns2="http://org.apache.synapse/xsd"/>
            <property expression="$ctx:apiconf//dummy_url" name="dummy_url" scope="default" type="STRING" xmlns:ns="http://org.apache.synapse/xsd" xmlns:ns2="http://org.apache.synapse/xsd"/>
            <log level="custom">
                <property name="Paso 1" value="Recibo data del audio a evaluar"/>
                <property expression="json-eval($.nombre)" name="audio obtenido"/>
                <property expression="json-eval($.ubicacion)" name="audio carpeta"/>
                <property expression="json-eval($.inst_id)" name="inst_id"/>
            </log>
            <header name="Content-Type" scope="transport" value="multipart/form-data"/>
            <header name="Accept-Encoding" scope="transport" value="gzip,deflate"/>
            <property name="FORCE_ERROR_ON_SOAP_FAULT" scope="default" type="STRING" value="true"/>
            <property expression="fn:concat($ctx:docker_url,'/analysis/analyzeTest')" name="uri.var.post_emlo" scope="default" type="STRING"/>
            <log level="custom">
                <property name="Paso 2" value="Armo JSON para Emotion Logic"/>
                <property expression="$ctx:uri.var.post_emlo" name="URL EMLO API"/>
            </log>
            <payloadFactory description="crear empresa" media-type="json">
                <format>{"data": {"outputType": "json","dummyResponse": "true","questions": [{"question": "$1","url": "http://ec2-44-203-253-107.compute-1.amazonaws.com/recordedAudio_838633030.wav","topics": [{"name": "topic_1","weight": 5},{"name": "topic_2","weight": 10}]}]}}</format>
                <args>
                    <arg evaluator="json" expression="$.nombre"/>
                    <arg evaluator="json" expression="$.ubicacion"/>
                </args>
            </payloadFactory>
            <call>
                <endpoint>
                    <http method="post" uri-template="{uri.var.post_emlo}">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <filter regex="2[0-9][0-9]" source="get-property('axis2', 'HTTP_SC')">
                <then>
                    <log level="full"/>
                    <log level="custom">
                        <property expression="json-eval($)" name="inst_id"/>
                    </log>
                </then>
                <else>
                    <property name="FORCE_ERROR_ON_SOAP_FAULT" scope="default" type="STRING" value="true"/>
                    <log category="DEBUG" level="custom">
                        <property name="Cosero por el else" value="json-eval($)"/>
                    </log>
                </else>
            </filter>
            <header name="Content-Type" scope="transport" value="multipart/form-data"/>
            <header name="Accept-Encoding" scope="transport" value="gzip,deflate"/>
            <property name="FORCE_ERROR_ON_SOAP_FAULT" scope="default" type="STRING" value="true"/>
            <property expression="fn:concat($ctx:dataservices_url,'/services/PersonaDataService/evaluacion/response')" name="uri.var.put_emlo_response" scope="default" type="STRING"/>
            <payloadFactory description="crear empresa" media-type="json">
                <format>{"put_emlo_response": {"outputType": "json","dummyResponse": "true","questions": [{"question": "$1","url": "http://ec2-44-203-253-107.compute-1.amazonaws.com/recordedAudio_838633030.wav","topics": [{"name": "topic_1","weight": 5}]}]}}</format>
                <args>
                    <arg evaluator="json" expression="$.nombre"/>
                    <arg evaluator="json" expression="$.ubicacion"/>
                </args>
            </payloadFactory>
            <call>
                <endpoint>
                    <http method="post" uri-template="{uri.var.post_emlo}">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <loopback/>
        </inSequence>
        <outSequence>
            <log level="full">
                <property name="MESSAGE" value="FIRST"/>
            </log>
            <payloadFactory description="Mensaje error" media-type="json">
                <format>{"respuesta":{"status" : "true","msg":"Todo correcto"}}</format>
                <args/>
            </payloadFactory>
            <log level="full"/>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
